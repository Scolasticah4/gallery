pipeline {
    agent any
    
    environment {
        GIT_SSH_COMMAND = "ssh -i ~/.ssh/id_ed25519 -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no"
        RENDER_API_TOKEN = credentials('render-api-token')
        RENDER_APP_NAME = 'Render'
        GITHUB_TOKEN = credentials('github-credits') // Use the ID you provided for GitHub token
    }
    
    tools {
        nodejs 'NodeJS 12.22.9'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Scolasticah4/gallery', credentialsId: "${GITHUB_TOKEN}"
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Deploy to Render') {
            steps {
                script {
                    // Use curl to trigger a deployment to Render
                    sh """
                    curl -X POST -H 'Authorization: Bearer ${RENDER_API_TOKEN}' \
                        -H 'Content-Type: application/json' \
                        -d '{"branch": "master", "env": {"NODE_ENV": "production"}}' \
                        https://api.render.com/v1/services/${RENDER_APP_NAME}/deploys
                    """
                }
            }
        }
    }
    
    post {
        success {
            echo 'Deployment to Render succeeded!'
        }
        failure {
            echo 'Deployment to Render failed!'
        }
    }
}
