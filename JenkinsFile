pipeline {
    agent any
     tools {
    nodejs 'NodeJS 12.22.9'
}
environment {
        GIT_SSH_COMMAND = "ssh -i ~/.ssh/id_ed25519 -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Scolasticah4/gallery'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Deploy to Render') {
            steps {
                sh 'node server.js'
            }
        }

        stage('Modify Landing Page') {
            steps {
                sh 'echo "<h1>MILESTONE 2</h1>" >> index.html'
            }
        }

        stage('Push Changes') {
            steps {
                gitPush branch: 'master', tags: false
            }
        }
    }

    
}
