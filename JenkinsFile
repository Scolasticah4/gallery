pipeline {
    agent any
    
    environment {
        GIT_SSH_COMMAND = "ssh -i ~/.ssh/id_ed25519 -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no"
        RENDER_API_TOKEN = credentials('render-api-token')
        RENDER_APP_NAME = 'Render'
        GITHUB_TOKEN = credentials('github-credits')
        EMAIL_RECIPIENT = 'scolasticah.macharia@student.moringaschool.com'
        SLACK_CHANNEL = '#week-2-ip-1' 
        SLACK_CREDENTIALS_ID = 'Slack'
    }
    
    tools {
        nodejs 'NodeJS 12.22.9'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Scolasticah4/gallery', credentialsId: "${GITHUB_TOKEN}"
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Deploy to Render') {
            steps {
                script {
                    // Use curl to trigger a deployment to Render
                    sh """
                    curl -X POST -H 'Authorization: Bearer ${RENDER_API_TOKEN}' \
                        -H 'Content-Type: application/json' \
                        -d '{"branch": "master", "env": {"NODE_ENV": "production"}}' \
                        https://api.render.com/v1/services/${RENDER_APP_NAME}/deploys
                    """
                }
            }
        }
    }
    
    post {
        success {
            echo 'Deployment to Render succeeded!'
            slackSend channel: "${SLACK_CHANNEL}", color: 'good', message: "Build succeeded: ${env.JOB_NAME} ${env.BUILD_NUMBER}. Access app on https://gallery-ey0u.onrender.com"
        }
        failure {
            echo 'Deployment to Render failed!'
            slackSend channel: "${SLACK_CHANNEL}", color: 'danger', message: "Build failed: ${env.JOB_NAME} ${env.BUILD_NUMBER}"
        }
        always {
            script {
                if (currentBuild.result == 'FAILURE') {
                    emailext (
                        to: "${EMAIL_RECIPIENT}",
                        subject: "Jenkins Build Failed: ${env.JOB_NAME} ${env.BUILD_NUMBER}",
                        body: """
                        <p>The Jenkins build <b>${env.JOB_NAME} ${env.BUILD_NUMBER}</b> has failed.</p>
                        <p>Please check the Jenkins console output for more details: ${env.BUILD_URL}</p>
                        """
                    ) 
                }
            }
        }
    }
}
